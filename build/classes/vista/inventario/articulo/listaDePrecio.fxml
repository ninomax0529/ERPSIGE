<VBox alignment="TOP_CENTER" prefHeight="525.0" prefWidth="816.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_RIGHT" prefHeight="56.0" prefWidth="494.0" spacing="10.0">
         <children>
            <JFXButton fx:id="btnNuevo" onAction="#btnNuevoActionEvent" prefHeight="30.0" prefWidth="70.0" styleClass="btn-new" stylesheets="@../../../style/style.css" text="Nuevo">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font size="14.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="btnEditar" onAction="#btnEditarActionEvent" prefHeight="30.0" prefWidth="60.0" styleClass="btn-update" stylesheets="@../../../style/style.css" text="Editar">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </JFXButton>
         </children>
      </HBox>
      <Separator prefWidth="200.0" />
      <TableView fx:id="tbListaDePrecio" prefHeight="457.0" prefWidth="810.0" VBox.vgrow="SOMETIMES">
        <columns>
          <TableColumn fx:id="tbcCodigo" prefWidth="75.0" text="Codigo" />
          <TableColumn fx:id="tbcNombre" prefWidth="75.0" text="Nombre" />
            <TableColumn fx:id="tbcTipoLista" prefWidth="75.0" text="Tipo Lista" />
            <TableColumn fx:id="tbcTipoVenta" prefWidth="75.0" text="Tipo Venta" />
            <TableColumn fx:id="tbcHabilitada" prefWidth="75.0" text="Habilitada" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TableView>
   </children>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</VBox>
